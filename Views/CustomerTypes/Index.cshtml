@model IEnumerable<PruebaSchad.Models.ViewModels.CustomerTypeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Customer Types</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Editar", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-default" }) 
            @Html.ActionLink("Delete", "Eliminar", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
