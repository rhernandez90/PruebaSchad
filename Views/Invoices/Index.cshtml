@model IEnumerable<PruebaSchad.Models.ViewModels.InvoiceListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Invoice List</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
</p>


<div class="row">
    <div class="form-group col-md-12">
        <table id="tblInvoiceDetail" class="table table-bordered table-responsive table-hover">
            <tr>
                <th>Customer </th>
                <th>Total </th>
                <th></th>

            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                      
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-default" })*@
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }



            </tbody>



        </table>

</div>

